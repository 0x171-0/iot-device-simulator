  "compilerOptions": {
    "module": "commonjs",
    "outDir": "lib",
    "target": "es2017",
    "lib": ["es2019", "es2017.object", "dom"],
    "declaration": true,
    "sourceMap": true,
    "incremental": true,
    "removeComments": true,
    "strict": true,
